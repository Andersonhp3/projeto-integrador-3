<%- include('./partials/header') %>

<section class="first" id="pesquisa">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div id="pesquisaBox" class="py-1 pt-3 mb-md-5 form-group">
                    <h1 class="text-blue">Pesquisar Pet</h1>
                    <form class="container form-group" action="categoriaAdocao.html">
                        <div class="row justify-content-around align-items-center">
                            <div class="col-md-4 pb-2">
                                <input class="form-control input-decoration text-center" type="text" name="regiaoAdocao"
                                    id="regiaoAdocao" placeholder="Região da Adoção" />
                            </div>
                            <div class="col-md-4 pb-2">
                                <button
                                    class="form-control input-decoration btn btn-outline-secondary dropdown-toggle rounded-pill"
                                    type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false">
                                    Escolha o tipo de Pet
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Cachorro</a>
                                    <a class="dropdown-item" href="#">Gato</a>
                                    <a class="dropdown-item" href="#">Pássaros</a>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-site btn-pesquisar">Pesquisar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="container" id="petDisp">
    <h2 class="text-blue">Pets disponíveis para adoção</h2>
    <div class="row">
        <% for (pet of pets) { %>
        <div class="col-md-3 p-1">
            <a href="/pet/detalheAdocao?id=<%=pet.id%> ">
                <div class="card" style="width: auto;">
                    <img src="<%= pet.imagem[0].imagem %> " class="card-img-top" height="142px" alt="Nome do produto" />
                    <div class="card-body">
                        <h5 class="card-title"><%=pet.nome%></h5>
                        <p class="card-text"><%=pet.raca%></p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>
    </div>
    </div>
</section>
<%- include('./partials/footer') %>