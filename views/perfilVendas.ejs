      <div class="col-md-9">
        <h1 class="text-blue">Vendas</h1>
        <% if(vendas.length > 0) {%>
        <nav aria-label="Page navigation example">
          <ul class="pagination pagination-sm">
            <li id="previous-page" class='page-item'>
              <a class='page-link' href="javascript:void(0)" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </a>
            </li>
          </ul>
        </nav>
        <table id="table" class="table table-sm table-striped table-responsive-sm">
          <thead>
            <tr>
              <th scope="col">Nome do Produto</th>
              <th scope="col">Valor</th>
              <th scope="col">Data da Venda</th>
            </tr>
          </thead>
          <tbody>
            <% for (venda of vendas) {
                for (pedido of venda.pedido){
              let d = new Date(pedido.data) 
              let dia = d.getDate() 
              let mes = d.getMonth()+1 
              let ano = d.getFullYear()

              let data = ''
            
            if(mes<10){ 
              data = `${dia}/0${mes}/${ano}`
            } else { 
              data = `${dia}/${mes}/${ano}` }%>

            <tr class="table-items">
              <td><%=venda.nome%></td>
              <td><%=venda.preco.toLocaleString('pt-BR',{style: 'currency', currency: 'BRL'})%></td>
              <td><%=data%></td>
            </tr>
            <% }}} else {%>
            <div class="container d-flex justify-content-center align-items-center" style="height: 300px;">
              <h4 class="text-center text-blue">Você ainda não tem nenhuma venda!</h4>
            </div>
            <% } %>
          </tbody>
        </table>
