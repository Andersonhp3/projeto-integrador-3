<%- include('./partials/header', {active: title}) %>
<section id="navCategorias" class="mb-3">
    <nav class="navbar navbar-expand-sm bg-white py-0">
        <div class="container">
            <button class="navbar-toggler text-blue" type="button" data-toggle="collapse"
                data-target="#myNavbarCategorias" aria-controls="myNavbarCategorias" aria-expanded="false"
                aria-label="Menu de categorias">
                <i class="fas fa-bars text-blue mr-2"></i>Categorias
            </button>
            <span class="text-blue"><strong class="ml-2">Categorias</strong></span>

            <div class="container collapse navbar-collapse text-blue" id="myNavbarCategorias">
                <div class="navbar-nav row">
                    <% for (let categoria of categoriaPetAll) {%>   
                    <a class="nav-link nav-item py-0 text-decoration-none text-reset active"
                        href="/produto/categoriaPet?id=<%=categoria.id%>"><%=categoria.categoria%></a>
                    <%}%>
                </div><!-- navbar -->
            </div><!-- collapse -->
        </div>
    </nav>
</section>
<section id="produto" class="first">
    <div class="container tudo">
        <div class="row">
            <div class="col-md-6" id="campoFoto">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <% if(produto.imagem.length>0){
                                for(let i=1; i<produto.imagem.length; i++){%>
                        <li data-target="#carouselExampleIndicators" data-slide-to="<%=i%>"></li>
                        <%}}%>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="<%=produto.imagem[0].imagem%>" class="d-block w-100" alt="...">
                        </div>
                        <% if(produto.imagem.length>0) {
                                for (let i=1; i<produto.imagem.length;i++){%>
                        <div class="carousel-item">
                            <img src="<%=produto.imagem[i].imagem%>" class="d-block w-100" alt="...">
                        </div>
                        <%} }%>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-md-6 mt-3 mb-5">
                <h3 class=" mb-3 text-left"><%=produto.nome%></h3>
                <p class="h5 mb-3 text-blue"><strong class="text-pink">Marca: </strong><%=produto.marca%></p>


                <form action="/comprar" method="GET">
                    <input name="id" type="text" value="<%=produto.id%>" class="d-none">
                    <span class="mt-2"><strong class="text-pink">Quantidade: </strong></span>
                    <input class="mx-0 my-0 form-control input-decoration px-3" type="number" style="width: 60px;"
                        name="quant" value="1" min="0">
                    <p class="mt-2 text-blue"><strong class="text-pink">Preço: </strong><%=produto.preco.toLocaleString('pt-BR',{style: 'currency', currency: 'BRL'})%></p><br>
                    <button type="submit" class="btn btn-site m-2">Comprar</button><br>
                </form>
            </div>
        </div>
        <div class="container mt-3">
            <div class="row">
                <div class="col-md-12">
                    <h4><strong class="text-blue">Informação geral do produto</strong></h4>
                    <p class="text-blue"><%=produto.descricao%></p>
                </div>
            </div>
        </div>
        <div class="container mt-3">
            <h4><strong class="text-blue">Informações sobre o vendedor</strong></h4>
            <div class="row">
                <div class="col-1">
                    <img src="<%= produto.usuario.imagem%>" width="62px" alt="">
                </div>
                <div class="">
                    <h5 id="nomeUser" class="text-blue"><strong><%=produto.usuario.nome%></strong></h5>
                    <div>
                        <p class="text-blue"><strong class="text-pink">Email do vendedor:
                            </strong><%=produto.usuario.email%></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('./partials/footer') %>