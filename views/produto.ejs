<%- include('./partials/header', {active: title}) %>

<section id="produto" class="first">
    <div class="container tudo">
        <div class="row">
            <div class="col-md-6" id="campoFoto">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <% if(produto.imagem.length>0){
                                for(let i=1; i<produto.imagem.length; i++){%>
                        <li data-target="#carouselExampleIndicators" data-slide-to="<%=i%>"></li>
                        <%}}%>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="<%=produto.imagem[0].imagem%>" class="d-block w-100" alt="...">
                        </div>
                        <% if(produto.imagem.length>0) {
                                for (let i=1; i<produto.imagem.length;i++){%>
                        <div class="carousel-item">
                            <img src="<%=produto.imagem[i].imagem%>" class="d-block w-100" alt="...">
                        </div>
                        <%} }%>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-md-6 mt-3 mb-5">
                <h3 class="text-left"><%=produto.nome%></h3>
                <p>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </p>


                <form action="/comprar" method="GET">
                    <input name="id" type="text" value="<%=produto.id%>" class="d-none">
                    <span class="mt-2"><strong class="text-pink">Quantidade: </strong></span>
                    <input class="mx-0 my-0 form-control input-decoration px-3" type="number" style="width: 60px;"
                        name="quant" value="1" min="0">
                    <p class="mt-2 text-blue"><strong class="text-pink">Preço: </strong><%=produto.preco.toLocaleString('pt-BR',{style: 'currency', currency: 'BRL'})%></p><br>
                    <button type="submit" class="btn btn-site m-2">Comprar</button><br>
                </form>
            </div>
        </div>
        <div class="container mt-3">
            <div class="row">
                <div class="col-md-12">
                    <h4><strong class="text-blue">Informação geral do produto</strong></h4>
                    <p><%=produto.descricao%></p>
                </div>
            </div>
        </div>
        <div class="container mt-3">
            <h4><strong class="text-blue">Informações sobre o vendedor</strong></h4>
            <div class="row">
                <div class="col-1">
                    <img src="<%= produto.usuario.imagem%>" width="62px" alt="">
                </div>
                <div class="">
                    <h5 id="nomeUser" class="text-blue"><strong><%=produto.usuario.nome%></strong></h5>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <div>
                        <p class="text-blue"><strong class="text-pink">Email do vendedor:
                            </strong><%=produto.usuario.email%></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-3">
            <h4><strong class="text-blue">Avaliações do Produto</strong></h4>
            <div class="row">
                <div class="col-md-12">
                    <i class="fas fa-user-circle" id="foto-coment"></i> <span>Jane</span>
                    <span id="avaliacao-coment">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
