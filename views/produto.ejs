<%- include('./partials/header') %>

    <div class="container tudo">
        <section id="produto">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-md-6">
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <% if(produto.imagem.length>0){
                                    for(let i=1; i<produto.imagem.length; i++){%> 
                                <li data-target="#carouselExampleIndicators" data-slide-to="<%=i%>"></li>
                                <%}}%>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="<%=produto.imagem[0].imagem%>" class="d-block w-100" alt="...">
                                </div>
                                <% if(produto.imagem.length>0) {
                                    for (let i=1; i<produto.imagem.length;i++){%> 
                                <div class="carousel-item">
                                    <img src="<%=produto.imagem[i].imagem%>" class="d-block w-100" alt="...">
                                </div>
                                <%} }%>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 mt-5 mb-5">
                        <h3 class="text-left"><%=produto.nome%></h3>
                        <p>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </p>


                        <p><%=produto.descricao%></p>

                        <span class="mt-2">Quantidade: </span><input type="number" style="width: 40px;">

                        <p class="mt-2">Preço: <%=produto.preco%></p><br>

                        <button class="btn btn-site m-2">Comprar</button><br>
                        <button class="btn btn-site m-2">Adicionar ao Carrinho</button>
                    </div>
                </div>
            </div>
        </section>
