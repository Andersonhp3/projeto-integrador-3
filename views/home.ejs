<%- include('./partials/header', {active: title}) %>

<section id="home" class="first container">
    <div class="row m-0 p-0">
        <div class="col-md-6 col-12 banner my-1 m-md-0 p-0">
            <div class="mr-sm-2 p-md-3 bg-white">
                <a href="/adocao" type="button">
                    <img src="./images/bannerAdocao.svg" alt="Adoção">
                    <div class="btn btn-site btn-adocao">Adoção</div>
                </a>
            </div>
        </div>
        <div class="col-md-6 col-12 banner my-1 m-md-0 p-0">
            <div class="ml-sm-2 p-md-3 bg-white">
                <a href="/loja" type="button">
                    <img src="./images/bannerLoja.svg" alt="Loja">
                    <div class="btn btn-site btn-loja">Loja</div>
                </a>
            </div>
        </div>
    </div>
</section>
<section id="secMaisVendidos" class="container mt-5">
    <h2 class="text-blue">Mais vendidos</h2>
    <div id="carouselMaisVendidos" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="row">
                    <% for( let i = 1; i <= 6; i++) {%>
                        <div class="col-md-2 col-12 px-1 py-2">  
                            <a href="/produto/detalheProduto?id=<%=maisVendidos[ i - 1].id%>" class="text-decoration-none text-blue">
                                <div class="card" style="width: auto;">
                                    <img src="<%=maisVendidos[i -1].get().imagem[0].dataValues.imagem%>"
                                        class="card-img-top" alt="Nome do produto">
                                    <div class="card-body">
                                        <h5 class="card-title text-truncate" id="nomeProduto"><%=maisVendidos[i -1].nome%></h5>
                                        <p class="card-text" id="precoProduto"><%=maisVendidos[i -1].preco.toLocaleString('pt-BR',{style: 'currency', currency: 'BRL'})%></p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <%}%>
                </div>
            </div>
                <div class="carousel-item">
                    <div class="row">
                        <% for( let i = 7; i <= 12; i++) {%>
                            <div class="col-md-2 col-12 px-1 py-2"> 
                                <a href="/produto/detalheProduto?id=<%=maisVendidos[ i - 1].id%>" class="text-decoration-none text-blue">
                                    <div class="card" style="width: auto;">
                                        <img src="<%=maisVendidos[i -1].get().imagem[0].dataValues.imagem%>"
                                        class="card-img-top" alt="Nome do produto">
                                        <div class="card-body">
                                            <h5 class="card-title text-truncate" id="nomeProduto"><%=maisVendidos[i -1].nome%></h5>
                                            <p class="card-text" id="precoProduto"><%=maisVendidos[i -1].preco.toLocaleString('pt-BR',{style: 'currency', currency: 'BRL'})%></p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        <%}%>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <% for( let i = 13; i <= 18; i++) {%>
                            <div class="col-md-2 col-12 px-1 py-2"> 
                                <a href="/produto/detalheProduto?id=<%=maisVendidos[ i - 1].id%> class="text-decoration-none text-blue"">
                                    <div class="card" style="width: auto;">
                                        <img src="<%=maisVendidos[i -1].get().imagem[0].dataValues.imagem%>"
                                        class="card-img-top" alt="Nome do produto">
                                        <div class="card-body">
                                            <h5 class="card-title text-truncate" id="nomeProduto"><%=maisVendidos[i -1].nome%></h5>
                                            <p class="card-text" id="precoProduto"><%=maisVendidos[i -1].preco.toLocaleString('pt-BR',{style: 'currency', currency: 'BRL'})%></p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        <%}%>
                    </div>
                </div>
        </div>
            <a class="carousel-control-prev carrossel" href="#carouselMaisVendidos" role="button" data-slide="prev">
                <i class="fas fa-chevron-left text-blue arrow"></i>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next carrossel" href="#carouselMaisVendidos" role="button" data-slide="next">
                <i class="fas fa-chevron-right text-blue arrow"></i>
                <span class="sr-only">Next</span>
            </a>
        </div>
</section>

<% if(typeof(usuario) == 'undefined') { %>
    <%- include('./partials/cadastrar') %>
<% } %>

<% if(pets.length >= 6) { %>
    <%- include('./partials/secParaAdocao') %>
<% } %>

<% if(adotados.length >= 6) { %>
    <%- include('./partials/secRecemAdotados') %>
<% } %>


<%- include('./partials/footer') %>