<section id="perfil">
    <div class="container divInfo">
        <nav class="navbar navbar-expand-lg navbar-light bg-light d-md-none container opcoes">
            <a class="active-option" href="#">Opções</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-chevron-down"></i>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="active" href="perfil.html"><i class="fas fa-user"></i> Dados Cadastrais</a>
                    </li>
                    <li class="nav-item">
                        <a href="perfilCompras.html"><i class="fas fa-shopping-bag"></i> Minhas Compras</a>
