                    <li class="nav-item">
                        <a href="perfilVendas.html"><i class="fas fa-clipboard-check"></i> Minhas Vendas</a>
                    </li>
                    <li class="nav-item">
                        <a href="cadastroProduto.html"><i class="fas fa-handshake"></i>Vender</a>
                    </li>
                    <li class="nav-item">
                        <a href="cadastroAdocao.html"><i class="fas fa-paw"></i>Doar</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="row">
            <div class="col-md-3 d-none d-md-block" id="links">
                <p><a href="perfil.html" class="active"><i class="fas fa-user"></i> Dados Cadastrais</a></p>
                <hr>
                <p><a href="perfilCompras.html"><i class="fas fa-shopping-bag"></i> Minhas Compras</a>
                </p>
                <hr>
                <p><a href="perfilVendas.html"><i class="fas fa-clipboard-check"></i> Minhas Vendas</a></p>
                <hr>
                <p><a href="cadastroProduto.html"><i class="fas fa-handshake"></i> Vender</a></p>
