                <p><a href="cadastroAdocao.html"><i class="fas fa-paw"></i> Doar</a></p>
                <hr>
            </div>
            <div class="col-md-9">
                <div class="row justify-content-center">
                    <h1>Área do Cliente</h1><br>
                </div>
                <div class="row campo-nome justify-content-center w-100">

                    <div class="col-12" id="fotoUser">
                        <% if(!usuario.imagem) {%>
                        <a href="login.html" class="material-icons" id="iconeUser">account_circle</a>
                        <% } else { %>
                        <img src="<%= usuario.imagem %> " alt="Foto usuario" id="fotoUser">
                    </div>
                    <% } %>
                    <div class="col-12 d-flex justify-content-center align-items-center p-1
                    " id="nomeUser">
                        <h4 class="m-0"><%=usuario.nome%></h4>
                    </div>
                </div>
                <div class="row campo-info">
                    <div class="col-md-12">

                        <p><strong>Email:</strong> <%=usuario.email%></p>
                        <p><strong>CPF:</strong><%=usuario.cpf_cnpj%></p>
                    </div>
                </div>
            </div>

        </div>
    </div>
