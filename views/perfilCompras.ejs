<%- include('./partials/header') %>

<section class="first" id="perfilCompras">
  <div class="container divInfo">
    <nav class="navbar navbar-expand-lg navbar-light bg-light d-md-none container opcoes">
      <a class="active-option px-3" href="#">Opções</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <i class="fas fa-chevron-down"></i>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a href="/usuario"><i class="fas fa-user px-1"></i>Dados Cadastrais</a>
          </li>
          <li class="nav-item">
            <a class="active" href="/usuario/compras"><i class="fas fa-shopping-bag px-1"></i>Minhas Compras</a>
          </li>
          <li class="nav-item">
            <a href="/usuario/vendas"><i class="fas fa-clipboard-check px-1"></i>Minhas Vendas</a>
          </li>
          <li class="nav-item">
            <a href="/usuario/vendas"><i class="fab fa-product-hunt px-1"></i>Meus Produtos</a>
          </li>
          <li class="nav-item">
            <a href="/usuario/vender"><i class="fas fa-handshake px-1"></i>Vender</a>
          </li>
          <li class="nav-item">
            <a href="/usuario/doar"><i class="fas fa-paw px-1"></i>Doar</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="row container">
      <div class="col-md-3 d-none d-md-block" id="links">
        <a href="/usuario" class="text-blue"><i class="fas fa-user px-1"></i>Dados Cadastrais</a>
        <hr />
        <a href="/usuario/compras" class="active"><i class="fas fa-shopping-bag px-1"></i>Minhas Compras</a>
        <hr />
        <a href="/usuario/vendas" class="text-blue"><i class="fas fa-clipboard-check px-1"></i>Minhas Vendas</a>
        <hr />
        <a href="/usuario/produtos" class="text-blue"><i class="fab fa-product-hunt px-1"></i>Meus Produtos</a>
        <hr />
        <a href="/usuario/vender" class="text-blue"><i class="fas fa-handshake px-1"></i>Vender</a>
        <hr />
        <a href="/usuario/doar" class="text-blue"><i class="fas fa-paw px-1"></i>Doar</a>
        <hr />
      </div>

      <div class="col-md-9 table">
        <h1 class="text-blue">Compras</h1>
        <% if (pedidos.length === 0) {%>
        <div class="container d-flex justify-content-center align-items-center" style="height: 300px;">
          <h4 class="text-center">Você ainda não fez nenhuma compra</h4>
        </div>

        <%} else { %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Qtd</th>
              <th scope="col">Nome do Produto</th>
              <th scope="col">Valor</th>
              <th scope="col">Data da Compra</th>
            </tr>
          </thead>
          <tbody>
            <% for(pedido of pedidos){ %>
            <tr>
              <th scope="row">1</th>
              <td><%= pedido.produto[0].nome %></td>
              <td><%= pedido.produto[0].preco %></td>
              <td><%=pedido.data%></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <% } %>
    </div>
  </div>
</section>

<%- include('./partials/footer') %>