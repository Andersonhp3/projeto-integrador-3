<%- include('./partials/header', {active: title}) %>

<section id="descricao" class="first">
    <div class="container mt-5" id="campoGeral">
        <div class="row">
            <div class="col-md-6" id="campoFoto">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <% if(pet.imagem.length>0){
                                for(let i=1; i<pet.imagem.length; i++){%>
                        <li data-target="#carouselExampleIndicators" data-slide-to="<%=i%>"></li>
                        <%}}%>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="<%=pet.imagem[0].imagem%>" class="d-block w-100" alt="...">
                        </div>
                        <% if(pet.imagem.length>0) {
                                for (let i=1; i<pet.imagem.length;i++){%>
                        <div class="carousel-item">
                            <img src="<%=pet.imagem[i].imagem%>" class="d-block w-100" alt="...">
                        </div>
                        <%} }%>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
            <div class="col-md-6" id="campoDescri">
                <div class="row container-fluid mb-0">
                    <h1 class="text-blue"><%=pet.nome%></h1>
                </div>

                <p class="infoD text-blue"><strong class="text-pink">Adotado: </strong><%= pet.adotado ? 'Sim' : 'Não' %></p>
                <p class="infoD text-blue"><strong class="text-pink">Sexo: </strong><%=pet.genero%></p>
                <p class="infoD text-blue"><strong class="text-pink">Idade: </strong><%=pet.idade%> ano</p>
                <p class="infoD text-blue"><strong class="text-pink">Raça: </strong><%= pet.raca%></p>
                <p class="infoD text-blue"><strong class="text-pink">Descrição: </strong><%= pet.descricao%></p>
            </div>
        </div>
        <div class="row" id="infoDoador">
            <div class="col-md-12">
                <h5><strong class="text-blue">Informações do Doador</strong></h5>
            </div>
            <div class="col-md-1">
                <img src="<%= pet.usuario.imagem%>" width="62px" alt="">
            </div>
            <div class="col-md-11">
                <p class="infoD text-blue"><strong class="text-pink">Nome: </strong><%= pet.usuario.nome %></p>
                <p class="infoD text-blue"><strong class="text-pink">Telefone: </strong> <%= pet.contato %></p>
            </div>
        </div>
    </div>
</section>


<%- include('./partials/footer') %>