<%- include('./partials/header', {active: title}) %>

<section class="container first">
    <form action="/cadastro" method="POST">
        <div class="row form-group">
            <div class="col-md-4 border-right">
                <div class="d-flex justify-content-center">
                    <span class="h3 mb-5 text-blue">Foto/Logo</span>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="/public/images/profiles/default.png" alt="Foto/Logo" width="200px" height="200px"
                        class="image-preview mb-5" id="image-preview">
                </div>
                <div class="d-flex justify-content-center">
                    <label for="image-selector" class="btn btn-site" id="imagem-label">
                        Selecione Imagem
                        <input class="form-control d-none" type="file" id="image-selector" name="imagem">
                    </label>
                    <input class="form-control d-none" type="hidden" name="imagemb64" id="imagemb64" value="">
                </div>
            </div>
            <div class="col-md-8">
                <div class="d-flex justify-content-center">
                    <span class="h3 mb-5 text-blue">Cadastro</span>
                </div>
                <div class="form-group mb-4 d-flex justify-content-center">
                    <input id="nome" class="form-control input-decoration" type="text" name="nome" required="required" placeholder="Nome">
                </div>
                <div class="form-group mb-4 d-flex justify-content-center">
                    <input id="cnpjcpf" class="form-control input-decoration" type="text" required="required" name="cpf_cnpj"
                        placeholder="CNPJ/CPF">
                </div>
                <div class="form-group mb-4 d-flex justify-content-center">
                    <input id="email" class="form-control input-decoration" type="email" required="required" name="email"
                        placeholder="E-Mail">
                </div>
                <div class="form-group mb-4 d-flex justify-content-center">
                    <input id="senha" class="form-control input-decoration" type="password" required="required" name="senha"
                        placeholder="Senha">
                </div>
                <div class="d-flex">
                    <label for="submit" class="btn btn-site">
                        Enviar
                        <input class="form-control d-none" type="submit" id="submit" name="submit">
                    </label>
                </div>
            </div>
        </div>


        <div class="modal fade" id="image-cropper" data-backdrop="static" tabindex="-1" role="dialog"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-blue" id="staticBackdropLabel">Ajuste da Imagem</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div id="canvas">
                            
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button id="pronto" type="button" class="btn btn-site" data-dismiss="modal">Pronto</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
<script src="/public/javascripts/cadastro.js"></script>
<%- include('./partials/footer') %>