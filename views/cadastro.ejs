<%- include('./partials/header') %>

<section class="container first">
    <form action="/cadastro" method="POST" enctype="multipart/form-data">
        <div class="row form-group">
            <div class="col-md-4 border-right">
                <div class="d-flex justify-content-center">
                    <span class="h3 mb-5 text-blue">Foto/Logo</span>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="/images/profiles/default.png" alt="Foto/Logo" width="200px" height="200px"
                        class="image-preview mb-5" id="logo">
                </div>
                <div class="d-flex justify-content-center">
                    <label for="imagem" class="btn btn-site">
                        Selecione Imagem
                        <input class="form-control d-none" type="file" id="imagem" name="imagem">
                    </label>
                </div>
            </div>
            <div class="col-md-8">
                <div class="d-flex justify-content-center">
                    <span class="h3 mb-5 text-blue">Cadastro</span>
                </div>
                <div class="form-group mb-4 d-flex justify-content-center">
                    <input id="nome" class="form-control" type="text" name="nome" placeholder="Nome">
                </div>
                <div class="form-group mb-4 d-flex justify-content-center">
                    <input id="cnpjcpf" class="form-control" type="text" name="cpf_cnpj" placeholder="CNPJ/CPF">
                </div>
                <div class="form-group mb-4 d-flex justify-content-center">
                    <input id="email" class="form-control" type="email" name="email" placeholder="E-Mail">
                </div>
                <div class="form-group mb-4 d-flex justify-content-center">
                    <input id="senha" class="form-control" type="password" name="senha" placeholder="Senha">
                </div>
                <div class="d-flex">
                    <label for="submit" class="btn btn-site">
                        Enviar
                        <input class="form-control d-none" type="submit" id="submit" name="submit">
                    </label>
                </div>
            </div>
        </div>
    </form>
</section>
<%- include('./partials/footer') %>