<section class="first" id="perfilDoacoes">
  <div class="container divInfo">
    <nav class="navbar navbar-expand-lg d-md-none container opcoes">
      <a class="active-option px-3" href="#">Opções</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <i class="fas fa-chevron-down"></i>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a href="/usuario"><i class="fas fa-user px-1"></i>Dados Cadastrais</a>
          </li>
          <li class="nav-item">
            <a href="/usuario/compras"><i class="fas fa-shopping-bag px-1"></i>Minhas Compras</a>
          </li>
          <li class="nav-item">
            <a href="/usuario/vendas"><i class="fas fa-clipboard-check px-1"></i>Minhas Vendas</a>
          </li>
          <li class="nav-item">
            <a href="/usuario/produtos"><i class="fas fa-box-open px-1"></i>Meus Produtos</a>
          </li>
          <li class="nav-item">
            <a class="active" href="/usuario/doacoes"><i class="fas fa-hand-holding-heart px-1"></i>Minhas Doações</a>
          </li>
          <li class="nav-item">
            <a href="/usuario/vender"><i class="fas fa-handshake px-1"></i>Vender</a>
          </li>
          <li class="nav-item">
            <a href="/usuario/doar"><i class="fas fa-paw px-1"></i>Doar</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="row container mx-0 px-0">
      <div class="col-md-3 d-none d-md-block" id="links">
        <a href="/usuario" class="nav__link text-blue"><i class="icon__link fas fa-user px-1"></i>Dados Cadastrais</a>
        <hr>
        <a href="/usuario/compras" class="nav__link text-blue"><i class="icon__link fas fa-shopping-bag px-1"></i>Minhas Compras</a>
        <hr>
        <a href="/usuario/vendas" class="nav__link text-blue"><i class="icon__link fas fa-clipboard-check px-1"></i>Minhas Vendas</a>
        <hr>
        <a href="/usuario/produtos" class="nav__link text-blue"><i class="icon__link fas fa-box-open px-1"></i>Meus Produtos</a>
        <hr>
        <a href="/usuario/doacoes" class="nav__link active"><i class="icon__link fas fa-hand-holding-heart px-1"></i>Minhas Doações</a>
        <hr>
        <a href="/usuario/vender" class="nav__link text-blue"><i class="icon__link fas fa-handshake px-1"></i>Vender</a>
        <hr>
        <a href="/usuario/doar" class="nav__link text-blue"><i class="icon__link fas fa-paw px-1"></i>Doar</a>
        <hr>
    </div>
      <div class="col-md-9">
        <h1 class="text-blue">Doações</h1>
        <% if(pets.length == 0) { %>
        <div class="container d-flex justify-content-center align-items-center" style="height: 300px;">
          <h4 class="text-center text-blue">Você ainda não colocou nenhum pet para adoção!</h4>
        </div>
        <% } else { %>
        <nav aria-label="Page navigation example">
          <ul class="pagination pagination-sm">
            <li id="previous-page" class='page-item'>
              <a class='page-link' href="javascript:void(0)" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </a>
            </li>
          </ul>
        </nav>
        <table id="table" class="table table-sm table-striped table-responsive-sm">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Foto</th>
              <th scope="col">Pet</th>
              <th scope="col">Adotado</th>
              <th scope="col">Data de Cadastro</th>
              <th scope="col">Editar</th>
              <th scope="col">Excluir</th>
            </tr>
          </thead>
          <tbody>
            <% for(pet of pets) {%>
            <tr class="table-items">
              <th class="py-2" id="th_<%= pet.id %>" scope="row"><%= pet.id %></th>
              <td class="py-2"><a href="/pet/detalheAdocao?id=<%= pet.id %>"><img src="<%= pet.imagem[0].imagem %>" width="70px" alt=""></a></td>
              <td class="py-2"><%= pet.nome %></td>
              <td class="py-2"><%= pet.adotado ? 'Sim' : 'Não' %></td>
              <td class="py-2"><%= pet.dataCadastro.toLocaleDateString() %></td>
              <td class="py-2"><a href="javascript:void(0)" class="edit"><i id="edit_<%= pet.id %>"
                    class="fas fa-pencil-alt"></i></a></td>
              <td class="py-2"><a href="javascript:void(0)" class="delete"><i id="del_<%= pet.id %>"
                    class="fas fa-trash-alt"></i></a></td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <% } %>
        </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="modal fade" id="edit-modal" data-backdrop="static" tabindex="-1" role="dialog"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-blue" id="staticBackdropLabel">Editar
          </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/pet/atualizar" method="post" id="form">
            <div class="form-group">
              <input type="hidden" name="id" id="id">
              <input type="hidden" name="dataAdotado" id="dataAdotado">
              <input id="nome" class="form-control input-decoration mb-2" type="text" name="nome"
                placeholder="Nome do Pet" maxlength="100">
              <textarea name="descricao" id="descricao" class="form-control input-decoration mb-2" rows="5"
                placeholder="Descrição" type="text" maxlength="200"></textarea>
              <input id="contato" class="form-control input-decoration mb-2" type="text" name="contato"
                placeholder="Contato" columns="4" maxlength="45">
              <div class="custom-control custom-switch mb-2">
                <input type="checkbox" class="custom-control-input input-decoration" name="adotado" id="adotado">
                <label class="custom-control-label text-blue" for="adotado">Adotado</label>
              </div>
              <button id="btn-atualizar" type="submit" class="btn btn-site">Atualizar</button>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button id="pronto" type="button" class="btn btn-site" data-dismiss="modal">Fechar</button>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="/public/javascripts/perfilDoacoes.js"></script>

<%- include('./partials/footer') %>