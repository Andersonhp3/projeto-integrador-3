<%- include('./partials/header', {active: title}) %>    

    <section class="first" id="contact">
        <div class="container">
            <div class="alert  alert-success alert-dismissible fade show" id="enviadoSucesso" role="alert">
                <strong>Mensagem enviada com sucesso</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        <div class="container w-100 d-flex flex-row align-items-center ">
            <div class=" w-50 col-6 pad-0 divform">
                <div>
                    <div class="col">
                        <h2 class="text-center text-blue">Contato</h2>
                    </div>
                    <div class="col ">
                        <form action="/contato" class="d-flex flex-column align-items-center " method="POST">
                            <div class="form-group mb-3 w-100">
                                <input type="text" name="nome" id="nome" class="form-control input-decoration" placeholder="Nome">
                            </div>
                            <div class="form-group mb-3 w-100">
                                <input type="email" name="email" id="email" class="form-control input-decoration" placeholder="Email">
                            </div>
                            <div class="form-group mb-3 w-100">
                                <textarea name="mensagem" id="mensagem" id="mensagem" class="form-control input-decoration" rows="5"
                                    placeholder="Mensagem"></textarea>
                            </div>
                            <div class="alert alert-danger" id="preencherCampo" role="alert">
                                Preencha os campos!
                            </div>
                            <div class="input-group-append align-self-center col-md-3 botao px-0">
                                <button class="btn btn-site w-100 px-0" type="submit" id="btnEnviar">Enviar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="w-50 col-6 pad-0 media" id="imgContato">
                <img class="w-100" src="./images/bannerContato.svg" alt="contato">
            </div>
        </div>
        <script src="/public/javascripts/contato.js"></script>
    </section>

    <%- include('./partials/footer') %>