                </ul>
            </div>
        </nav>

        <div class="row container">
            <div class="col-md-3 d-none d-md-block" id="links">
                <a href="/usuario" class="nav__link text-blue"><i class="icon__link fas fa-user px-1"></i>Dados Cadastrais</a>
                <hr>
                <a href="/usuario/compras" class="nav__link text-blue"><i class="icon__link fas fa-shopping-bag px-1"></i>Minhas Compras</a>
                <hr>
                <a href="/usuario/vendas" class="nav__link text-blue"><i class="icon__link fas fa-clipboard-check px-1"></i>Minhas Vendas</a>
                <hr>
                <a href="/usuario/produtos" class="nav__link text-blue"><i class="icon__link fas fa-box-open px-1"></i>Meus Produtos</a>
                <hr>
                <a href="/usuario/doacoes" class="nav__link text-blue"><i class="icon__link fas fa-hand-holding-heart px-1"></i>Minhas Doações</a>
                <hr>
                <a href="/usuario/vender" class="nav__link active"><i class="icon__link fas fa-handshake px-1"></i>Vender</a>
                <hr>
                <a href="/usuario/doar" class="nav__link text-blue"><i class="icon__link fas fa-paw px-1"></i>Doar</a>
                <hr>
            </div>
            <div class="col-md-9">
                <div class="h3 text-blue text-center mb-3">Cadastro de Produto</div>
                <div class="row">
                    <div class="col border-right">
                        <div class="d-flex justify-content-center">
                            <span class="h3 mb-5 text-blue">Foto</span>
                        </div>
                        <div class="d-flex justify-content-center">
                            <img src="/images/produtos/default.png" alt="Foto/Logo" width="200px" height="200px"
                                class="image-preview mb-5" id="image-preview">
                        </div>
                        <div class="d-flex justify-content-center">
                            <label for="image-selector" class="btn btn-site">
                                Selecione Imagem
                                <input class="form-control d-none" type="file" id="image-selector" name="imagem">
                            </label>
                        </div>
                    </div>
                    <div class="col">
                        <form action="/produto/novo" method="POST" name="formProduto" id="formProduto">
                            <div id="cadastro-dados">
                                <div class="form-group mb-2">
                                    <input id="nome" class="form-control input-decoration" type="text"
                                        name="nome" placeholder="Nome do Produto" maxlength="100" required>
                                </div>
                                <div class="form-group mb-2">
                                    <input id="marca" class="form-control input-decoration" type="text"
                                        name="marca" placeholder="Marca do Produto" maxlength="100" required>
                                </div>
                                <div class="form-group mb-2">
                                    <textarea name="descricao" id="descricao" class="form-control input-decoration"
                                        rows="5" placeholder="Descrição" type="text" maxlength="200" required></textarea>
                                </div>
                                <div class="d-flex">
                                    <div class="form-group mb-2 mw-75 mr-1">
                                        <input id="estoque" class="form-control input-decoration" type="number" min="0"
                                            name="estoque" placeholder="Quantidade" required>
                                    </div>
                                    <div class="form-group mb-2 mw-75 ml-1">
                                        <input id="preco" class="form-control input-decoration" type="number" step=0.01 min="0"
                                            name="preco" placeholder="Preço" required>
                                    </div>
                                </div>
                                <div class="form-group mb-2">
                                    <select class="form-control input-decoration" id="categoria"
                                        name="categoria">
                                        <% for(cat of categorias) { %>
                                            <option value=<%= cat.id %> id=<%= cat.id %> ><%= cat.categoria %></option>
                                        <% } %>
                                    </select>
                                </div>
                                <div class="form-group mb-2">
                                    <select class="form-control input-decoration" id="categoria-pet"
                                        name="categoria_pet">
                                        <% for(cat_pet of categorias_pet) { %>
                                            <option value=<%= cat_pet.id %> id=<%= cat_pet.id %> ><%= cat_pet.categoria %></option>
                                        <% } %>
                                    </select>
                                </div>
                                <input class="form-control d-none" type="hidden" name="imagemb64" id="imagemb64"
                                    value="">
                                <div class="botoes" id="botaocadastro">
                                    <button type="submit" id="adicionarProduto" class="btn btn-site mr-5 mb-4 mt-3">Adicionar produto</button>
                                </div>
                            </div>
                            <div class="modal fade" id="image-cropper" data-backdrop="static" tabindex="-1"
                                role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title text-blue" id="staticBackdropLabel">Ajuste da Imagem
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div id="canvas">

                                            </div>
                                        </div>

                                        <div class="modal-footer">
                                            <button id="pronto" type="button" class="btn btn-site"
                                                data-dismiss="modal">Pronto</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</form>
</div>
</div>
</section>
