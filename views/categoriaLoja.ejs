<%- include('./partials/header', {active: title}) %>
<section id="navCategorias" class="mb-3">
    <nav class="navbar navbar-expand-sm bg-white py-0">
        <div class="container">
            <button class="navbar-toggler text-blue" type="button" data-toggle="collapse"
                data-target="#myNavbarCategorias" aria-controls="myNavbarCategorias" aria-expanded="false"
                aria-label="Menu de categorias">
                <i class="fas fa-bars text-blue mr-2"></i>Categorias
            </button>
            <a class="nav-link nav-item py-0 text-decoration-none text-blue d-none d-sm-block"
                href="#"> <i class="fas fa-bars text-blue mr-1"><strong class="ml-2">Categorias</strong></i> </a>

            <div class="container collapse navbar-collapse text-blue" id="myNavbarCategorias">
                <div class="navbar-nav row">
                    <% for (let categoria of categoriaPetAll) {%>
                    <a class="nav-link nav-item py-0 text-decoration-none text-reset active"
                        href="/produto/categoriaProduto?id=<%=categoria.id%>"><%=categoria.categoria%></a>
                        <%}%>
                </div><!-- navbar -->
            </div><!-- collapse -->
        </div>
    </nav>
</section>
    <section id="catLoja" class="container">
        <div class="row">
            <div class="col-md-2 d-none d-md-block filtros">
                <ul>
                    <div>
                        <a href="" id="categoria-Pet"><li><%= categoriaPet.categoria %></li></a>
                        
                        <% for ( let i = 0; i < novaCategoriasProduto.length; i++  ) {%>
                            <div class="opcao">
                                <a href=""><%=novaCategoriasProduto[i]%></a>
                            </div>
                        <%}%>
                    </div>
                    <div>
                        <li>Preço</li>
                        <div class="opcao"><input type="checkbox" name="" id="">Até R$200</div>
                        <div class="opcao"><input type="checkbox" name="" id="">de R$200 a R$500</div>
                        <div class="opcao"><input type="checkbox" name="" id="">Mais de R$500</div>
                    </div>
                </ul>
            </div>
            <div class="col-md-10 col-12">
                <div class="container">
                    <div class="row">
                        <% for ( let i = 0; i < categoriaPet.categoria_pet_produto.length; i++) {%>
                        <div class="col-md-3 col-12 justify-content-between mb-4">
                            <div class="card py-1">
                                <img src="<%=categoriaPet.categoria_pet_produto[i].imagem[0].dataValues.imagem%>" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title"><%=categoriaPet.categoria_pet_produto[i].nome%></h5>
                                    <p class="card-text">R$ <%=categoriaPet.categoria_pet_produto[i].preco%></p>
                                    <a href="produto.html" class="btn btn-site">Comprar</a>
                                </div>
                            </div>
                        </div>
                        <%}%>
                    </div>
                    <nav aria-label="Page navigation example ">
                        <ul class="pagination justify-content-center">
                          <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                              <span aria-hidden="true">&laquo;</span>
                            </a>
                          </li>
                          <li class="page-item"><a class="page-link" href="#">1</a></li>
                          <li class="page-item"><a class="page-link" href="#">2</a></li>
                          <li class="page-item"><a class="page-link" href="#">3</a></li>
                          <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                              <span aria-hidden="true">&raquo;</span>
                            </a>
                          </li>
                        </ul>
                      </nav>
                </div>
            </div>
        </div>
    </section>
    <%- include('./partials/footer') %>