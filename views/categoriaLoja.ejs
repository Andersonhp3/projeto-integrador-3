<%- include('./partials/header', {active: title}) %>
    
    <section id="catLoja" class="container">
        <div class="row">
            <div class="col-md-2 d-none d-md-block filtros">
                <ul>
                    <div>
                        <li><%= categoriaPet.categoria %></li>
                        <% for ( let i = 0; i < novaCategoriasProduto.length; i++  ) {%>
                            <div class="opcao">
                                <a href=""><%=novaCategoriasProduto[i]%></a>
                            </div>
                        <%}%>
                    </div>
                    <div>
                        <li>Preço</li>
                        <div class="opcao"><input type="checkbox" name="" id="">Até R$200</div>
                        <div class="opcao"><input type="checkbox" name="" id="">de R$200 a R$500</div>
                        <div class="opcao"><input type="checkbox" name="" id="">Mais de R$500</div>
                    </div>
                </ul>
            </div>
            <div class="col-md-10 col-12">
                <div class="container">
                    <div class="row">
                        <% for ( let i = 0; i < categoriaPet.categoria_pet_produto.length; i++) {%>
                        <div class="col-md-3 col-12 justify-content-between mb-4">
                            <div class="card py-1">
                                <img src="<%=categoriaPet.categoria_pet_produto[i].imagem[0].dataValues.imagem%>" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title"><%=categoriaPet.categoria_pet_produto[i].nome%></h5>
                                    <p class="card-text">R$ <%=categoriaPet.categoria_pet_produto[i].preco%></p>
                                    <a href="produto.html" class="btn btn-site">Comprar</a>
                                </div>
                            </div>
                        </div>
                        <%}%>
                    </div>
                    
                </div>
            </div>
        </div>
    </section>
    <%- include('./partials/footer') %>