<% if (typeof(usuario) == "undefined") {%>
    <%- include('./partials/headeroff') %>
<%} else {%>
    <%- include('./partials/header') %>
<% } %>

<section class="container first" id="login">
    <form action="/login" method="post">
        <div class="row form-group d-flex justify-content-center">
            <div class="col-sm-12 col-lg-6">
                <div class="">
                    <div class="d-flex justify-content-center">
                        <span class="h3 mb-5 text-blue">Login</span>
                    </div>
                    <div class="form-group mb-4 d-flex justify-content-center">
                        <input id="email" class="form-control" type="email" name="email" placeholder="E-Mail">
                    </div>
                    <div class="form-group mb-4">
                        <input id="senha" class="form-control" type="password" name="senha" placeholder="Senha">
                    </div>
                    <div class="row d-flex justify-content-around">
                        <label for="submit" class="btn btn-site">
                            Entrar
                            <input class="form-control d-none" type="submit" id="submit" name="submit">
                        </label>
                        <div class="">
                            <a href="/cadastro"><button type="button"
                                    class="btn btn-site botao">Cadastre-se</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
<%- include('./partials/footer') %>